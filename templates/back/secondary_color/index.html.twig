{% extends 'base.html.twig' %}

{% block title %}Couleurs secondaires des mugs{% endblock %}

{% block body %}
    <h1>Couleurs secondaires des mugs</h1>

    <a class="btn btn-warning btn-sm my-2" href="{{ path('back_secondary_color_new') }}">Nouvelle couleur</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code hexa</th>
                <th>Nom de la couleur</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for secondary_color in secondary_colors %}
            <tr>
                <td>{{ secondary_color.id }}</td>
                <td>{{ secondary_color.secondaryHexa }}</td>
                <td>
                    <div class="d-flex align-items-center">
                        {{ secondary_color.secondaryColorName }}<span class="border ms-2"
                            style="background-color: {{ secondary_color.secondaryHexa }}; width:20px; height:20px; display:inline-block;"></span>
                    </div>
                </td>
                <td>{% if secondary_color.status == 1 %}Disponible{% else %}Non disponible{% endif %}</td>
                <td>
                    <div class="d-flex">
                        <a class="btn btn-primary btn-sm me-2"
                            href="{{ path('back_secondary_color_edit', {'id': secondary_color.id}) }}">Editer</a>
                        {{ include('back/secondary_color/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
