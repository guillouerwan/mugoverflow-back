{% extends 'base.html.twig' %}

{% block title %}Liste des status{% endblock %}

{% block body %}
    <h1>Liste des status</h1>

    <a class="btn btn-warning btn-sm my-2" href="{{ path('back_status_new') }}">Nouveau status</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for status in statuses %}
            <tr>
                <td>{{ status.id }}</td>
                <td>{{ status.name }}</td>
                <td>
                    <div class="d-flex">
                    <a class="btn btn-primary btn-sm me-2" href="{{ path('back_status_edit', {'id': status.id}) }}">Editer</a>
                    {{ include('back/status/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(statuses) }}
        </div>
{% endblock %}
