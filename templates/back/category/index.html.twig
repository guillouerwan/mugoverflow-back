{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
    <h1>Liste des catégories</h1>

    <a class="btn btn-warning btn-sm my-2" href="{{ path('back_category_new') }}">Nouvelle Catégorie</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Noms</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
       {% for category in categories %}
        <tr>
            <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.description }}</td>
            <td>
                <div class="d-flex">
                    <a class="btn btn-primary btn-sm me-2" href="{{ path('back_category_edit', {'id': category.id}) }}">Editer</a>

                    {{ include('back/category/_delete_form.html.twig') }}
                </div>
            </td>
        </tr>
         {% else %}
        <tr>
            <td colspan="3">no records found</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}