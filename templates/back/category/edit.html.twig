{% extends 'base.html.twig' %}

{% block title %}Edition de la catégorie {{ category.name}}{% endblock %}

{% block body %}
    <h1>Edition de la catégorie {{ category.name}}</h1>

    {{ include('back/category/_form.html.twig', {'button_label': 'Mise à jour'}) }}
    {% if category.image != null %}
    <div class="my-2 d-flex">
        <div>
            <img src="{{ asset('uploads/images_categories/' ~ category.image) }}" alt="" width="40px">
        </div>
        <div>
            <form action="{{ path('back_category_picture', {'id': category.id, 'image':'Image'}) }}" method="post" onsubmit="return confirm('Êtes-vous sur de vouloir supprimer cette image ?');">
                <button type="submit" class="btn btn-link"><span>supprimer <svg xmlns="http://www.w3.org/2000/svg"
                            width="16" height="16" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
                            <path
                                d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                        </svg></span></button>
            </form>
        </div>
    </div>
    {% endif %}
    <div class="d-flex justify-content-between mt-2">
    {{ include('back/category/_delete_form.html.twig') }}
    <a href="{{ path('back_category_index') }}">Retour à la liste</a>
</div>

{% endblock %}
