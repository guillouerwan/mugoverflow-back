<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
        href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="icon" href="{{ asset('img/favicon.ico') }}" />
    {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('main')}}"><img src="{{ asset('img/logo-mugoverflow-admin.svg') }}" alt=""
                    height="40px"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                       {% if is_granted('ROLE_ADMIN', 'ROLE_SUPERADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="{{ path('back_product_index')}}">Produits</a>
                    </li>
                    {% endif %}
                       {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="{{ path('back_category_index')}}">Categories</a>
                    </li>
                     {% endif %}
                         {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="{{ path('back_promo_index')}}">Promotions</a>
                    </li>
                    {% endif %}
                     {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            Les couleurs
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page"
                                    href="{{ path('back_main_color_index')}}">Principales</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page"
                                    href="{{ path('back_secondary_color_index') }}">Secondaires</a>
                            </li>
                            {% endif %}
                        </ul>
                    </li>
                    {% if is_granted('ROLE_SUPERADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="{{ path('back_user_index')}}">Utilisateurs</a>
                    </li>
                    {% endif %}
                </ul>
                {# With the hierarchy, "ROLE_SUPERADMIN" has access to the user page #}
                <ul class="navbar-nav">
                
                 <li class="nav-item">
                    <span class="nav-link">
                        Bienvenue {{ app.user.firstname }} {{ app.user.lastname }}
                         </span>
                    </li>

                    <li class="nav-item"><a class="nav-link" href="{{ path('login_logout') }}">Déconnexion</a></li>
                    {% else %}
                    <li class="nav-item"><a class="nav-link" href="{{ path('login') }}" class="btn btn-danger me-2">Connexion</a></li>
                </ul>
                {% endif %}

            </div>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col">

                {# read and display all flash messages #}
                {% for label, messages in app.flashes %}
                {% for message in messages %}
                <div class="flash-{{ label }}">
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
                {% endfor %}
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="container my-2">
        {% block body %}{% endblock %}
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>